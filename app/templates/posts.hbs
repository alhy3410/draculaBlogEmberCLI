<h1>Posts</h1>

<div class="col-md-4">
  <ul class="list-unstyled">
    {{#each post in model}}
      <li>
        {{#link-to 'post' post.id}}
          {{post.title}}
          <span class='muted'>by {{post.author.name}}</span>
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
  <p>{{#link-to 'new-post' classNames="btn btn-primary"}}New scary post{{/link-to}}</p>

</div>

<div class="col-md-8">
  {{outlet}}
</div>
